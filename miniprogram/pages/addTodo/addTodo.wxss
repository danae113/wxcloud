/* components/addTodo/addTodo.wxss */
.container{
  background: #fff;
  height: auto;
  display: flex;
  flex-direction: column;

}
.form-cell{
  width: 700rpx;
  height: auto;
  margin-bottom: 50rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
}
.image-item{
  width: 200rpx;
  height: 200rpx;
  margin: 15rpx;
}
.form-input{
  border: 0rpx;
  border-bottom: 1rpx solid #eee;
  height: 100rpx;
  padding: 0 20rpx;
  background: #fff
}

.form-textarea{
  border: 0rpx;
  border-bottom: 1rpx solid #eee;
  height: 200rpx;
  padding: 0 20rpx;
  background: #fff;
  width:100%;
}

.form-cell-fixed{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  
}
.radio{
  display: flex;
  flex-direction: row;
}
.radioitem{
  margin-right: 50rpx;
}
.picker{
  height: 88rpx;
  line-height: 88rpx;
  background: #fff;
  padding: 0 25rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 28rpx
}
.custom-icon{
  color: #666;
  font-size: 20px;
}