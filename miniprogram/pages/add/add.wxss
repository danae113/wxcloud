/* miniprogram/pages/add/add.wxss */
.line{
  width: 100%;
  height: 100rpx;
  margin-bottom: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.line-til{
  width: 200rpx;
  text-align: center
}
.fix-bottom{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 750rpx;
  height: 80rpx;
}
.btnlarge{
  width: 100%
}
.photos-area{
  width: 700rpx;
  margin: 10rpx auto;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap
}
.photo-img{
  width: 165rpx;
  height: 165rpx;
  position: relative;
  box-sizing: border-box;
  margin: 5rpx;
}
.photo-image{
  width: 155rpx;
  height: 155rpx;
}
.delbtn{
  width: 30rpx;
  height: 30rpx;
  background: #fff;
  position: absolute;
  top: 0;
  z-index: 1;
  right: 0;
  color: #999;
  text-align: center;
  line-height: 30rpx;
}